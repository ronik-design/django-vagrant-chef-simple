ServerName <%= @server_name %>

Alias /robots.txt /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/robots.txt
Alias /favicon.ico /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/favicon.ico

Alias /site_media/media/ /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/media/
Alias /site_media/static/ /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/

<Directory /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static>
    Order deny,allow
    Allow from all
</Directory>

<Directory /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/media>
    Order deny,allow
    Allow from all
</Directory>

WSGIDaemonProcess pinaxWSGI user=vagrant group=vagrant threads=25 python-path=/usr/local/lib/python2.7/site-packages:/src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>
WSGIProcessGroup pinaxWSGI
WSGIScriptAlias / /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/wsgi.py

<Directory /src/<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>>
    <Files wsgi.py>
        Order allow,deny
        Allow from all
    </Files>
</Directory>