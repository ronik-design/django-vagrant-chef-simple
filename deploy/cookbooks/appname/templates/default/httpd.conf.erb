ServerName <%= @server_name %>

Alias /robots.txt <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/robots.txt
Alias /favicon.ico <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/favicon.ico

Alias /site_media/media/ <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/media/
Alias /site_media/static/ <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static/

<Directory <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/static>
    Order deny,allow
    Allow from all
</Directory>

<Directory <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/site_media/media>
    Order deny,allow
    Allow from all
</Directory>

WSGISocketPrefix /var/run/wsgi
WSGIDaemonProcess pinaxWSGI user=<%= node[:wsgi_user][:user] %> group=<%= node[:wsgi_user][:group] %> threads=25 python-path=/usr/local/lib/python<%= node[:python][:version] %>/site-packages:<%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>
WSGIProcessGroup pinaxWSGI
WSGIScriptAlias / <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>/wsgi.py

<Directory <%= node[:project_folder_name] %>/<%= node[:django_settings][:project_name] %>>
    <Files wsgi.py>
        Order allow,deny
        Allow from all
    </Files>
</Directory>